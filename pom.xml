        </dependency>
        
<dependency>
    <groupId>org.apache.clerezza.ext</groupId>
    <artifactId>org.json.simple</artifactId>
    <version>0.4</version>
</dependency>
        
    </dependencies>
    <build>
    <defaultGoal>clean generate-sources compile install</defaultGoal>
        <plugins>
